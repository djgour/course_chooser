<% provide(:title, "Create new courseplan") %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @courseplan, url: { action: "create" }, html: { class: "form-horizontal"} do |f| %>
      <%= render 'shared/error_messages', object: @courseplan %>
      
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit "Create", class: "btn btn-large btn-success btn-form" %>
    <% end %>
  </div>
</div>