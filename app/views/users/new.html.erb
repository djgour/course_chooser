<%= provide(:title, 'Register') %>
<h1>Register</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @user, url: { action: "create" }, html: { class: "form-horizontal"} do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "control-label" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "control-label" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, 'Confirm your password', class: "control-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "Create account", class: "btn btn-large btn-success btn-form" %>
    <% end %>
  </div>
</div>